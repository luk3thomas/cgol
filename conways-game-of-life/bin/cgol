#!/usr/bin/env ruby

require './lib/cell'
require './lib/board'
require './lib/automaton'
require './lib/screen'

row = (40).times.map{ rand.round }.shuffle
filler = (40).times.map{ row.shuffle }

board = Board.new( [40, 40], filler )
automaton = Automaton.new board
screen = Screen.new board

1000.times do
  screen.draw!
  automaton.cycle!
  sleep 0.01
end
